{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/send_email",
      "dest": "send_email.py",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "api.py",
      "methods": ["GET"]
    }
  ]
}